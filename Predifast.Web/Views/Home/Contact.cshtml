<!-- Content -->
<div id="content">
    
    <!-- Contact  -->
    <section class="contact-us light-gray-bg">
        <div class="container-fluid">
            <div class="row">
                <!-- MAP -->
                <div class="col-md-6">
                    <div id="map"></div>
                </div>
                <!-- End Map-->
                <div class="col-md-6">
                    <h3 class="font-alegreya margin-top-50">Get In Touch With Us</h3>
                    <div class="contact-form">

                        <!-- FORM -->
                        <form role="form" id="contact_form" class="contact-form" method="post" onsubmit="return false">
                            @Html.AntiForgeryToken()
                            <ul class="row">
                                <li class="col-sm-6">
                                    <label>
                                        *NAME
                                        <input type="text" autocomplete="off" class="form-control" name="name" id="name" placeholder="">
                                    </label>
                                </li>
                                <li class="col-sm-6">
                                    <label>
                                        *EMAIL
                                        <input type="text" autocomplete="off" class="form-control" name="email" id="email" placeholder="">
                                    </label>
                                </li>
                                <li class="col-sm-6">
                                    <label>
                                        PHONE
                                        <input type="text" autocomplete="off" class="form-control" name="company" id="company" placeholder="">
                                    </label>
                                </li>
                                <li class="col-sm-6">
                                    <label>
                                        SUBJECT
                                        <input type="text" autocomplete="off" class="form-control" name="website" id="website" placeholder="">
                                    </label>
                                </li>
                                <li class="col-sm-12">
                                    <label>
                                        *MESSAGE
                                        <textarea class="form-control" name="message" id="message" rows="5" placeholder=""></textarea>
                                    </label>
                                </li>
                                <li class="col-sm-12">
                                    <div class="g-recaptcha" data-sitekey="6LemgBkUAAAAAHqW7ALIwCQzFnoKRXNRYOl7Q4jG"></div>
                                </li>
                                <li class="col-sm-12 no-margin">
                                    <button type="submit" value="submit" class="btn" id="btn_submit" onclick="proceed();">SEND NOW</button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Contact Info -->
    <section class="contact-info padding-top-80 padding-bottom-80">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3 class="font-alegreya margin-top-30">Contact Us</h3>
                </div>
                <div class="col-md-8">
                    <ul class="row">
                        <li class="col-sm-4">
                            <i class="fa fa-map-marker"></i>
                            <h4 class="font-alegreya">Visit Us</h4>
                            <p>Plot No 546, 1st Floor</p>
                            <p>Pragathi Nagar</p>
                            <p>Hyderabad 500090 India</p>
                        </li>
                        <li class="col-sm-4">
                            <i class="fa fa-clock-o"></i>
                            <h4 class="font-alegreya">Working Hours</h4>
                            <p>Mon - Fri : 9:00 AM - 5:00 PM</p>
                            <!--p>Sat : 9:00 AM - 2:00 PM</p-->
                        </li>
                        <li class="col-sm-4">
                            <i class="fa fa-phone"></i>
                            <h4 class="font-alegreya">Contact</h4>
                            <!--p></p-->
                            <p>+91 9553040506</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- End Content --> 
@section scripts{<!-- begin map script-->
<script>
        function initMap() {
            var uluru = { lat: 17.5167543, lng: 78.3960987 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBzuUWe_la3OjDNDpyve0KseVhX0urAAz4&callback=initMap">
</script>

